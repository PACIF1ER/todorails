<%- model_class = Task -%>

<div class="page-header">
  <h1>Completed tasks</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Check</th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:duedate) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
<tbody>
    <%  @tasks_completed.each do |task| %>
      <tr>
        <td><%= check_box_tag 'tasks_id[]', task.id, false %></td>
        <td><%= task.name %></td>
        <td ><%= task.duedate %></td>
        <td><%= task.description %></td>
        <td><%=l task.created_at %></td>
        <td>
        
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      task_path(task), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      task_path(task),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>

        </td>
      </tr>
    <% end %>

  </tbody>
  </table>
  
    <div align="right">
<%= submit_tag "Delete selected", method: :delete, type: "submit", data: { confirm: "Are you sure?" }, class: "btn btn-danger delete_selected" %>
</div>
<div>
    <%= link_to t('.new', :default => t("helpers.links.new")),
            new_task_path,
            :class => 'btn btn-primary' %>
    <input type="button" class=" icon-check btn btn-primary check_all" value="Check All">
    <input type="button" class="btn btn-primary uncheck_all" value="Uncheck All">
  </div>

</div>
