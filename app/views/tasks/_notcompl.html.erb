<%- model_class = Task -%>

<div class="page-header col-md-offset-4">
  <h1 >Not completed tasks</h1>
</div>
<div class="container">
    <div class="row col-md-7 col-md-offset-2 custyle">
    <table class="table table-striped custab">
    <thead>
        <tr>
            <th>Check</th>
            <th><%=sortable "name"%></th>
            <th>Duedate</th>
            <th>Priority</th>
            <th class="text-center">Action</th>
        </tr>
    </thead>
          <%  @tasks.each do |task| %>
            <tr>
                <td><%= check_box_tag 'tasks_id[]', task.id %></td>
                <td><%= task.name %></td>
                <td ><%= task.duedate %></td>
                <td><%= task.status %></td>
                <td>
                    <%= link_to 'Complete' , complete_task_path(task), :class => 'btn btn-success btn-xs' %>
                    <%= link_to t('.show', :default => t("helpers.links.show")),
                      task_path(task), :class => 'btn btn-default btn-xs' %>
                    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_task_path(task), :class => 'btn btn-default btn-xs' %>
                    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      task_path(task),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
                </td>
      </tr>


<% end %>
           
    </table>
    </div>
</div>


    
