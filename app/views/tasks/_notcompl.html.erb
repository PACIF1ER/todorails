<%- model_class = Task -%>
<%= form_tag destroy_multiple_tasks_path do %>


<div class="page-header col-md-offset-4">
  <h1 >Not completed tasks</h1>
</div>
<div class="container">
    <div class="row col-md-7 col-md-offset-2 custyle">
    <table class="table table-striped custab">
    <thead>
        <tr>
            <th>Check</th>
            <th><%=sortable "name"%></th>
            <th><%=sortable "duedate"%></th>
            <th><%=sortable "priority"%></th>
            <th class="text-center">Action</th>
        </tr>
    </thead>
          <%  @tasks.each do |task| %>
            <tr>
                <td><%= check_box_tag 'tasks_id[]', task.id, nil %></td>
                <td><%= task.name %></td>
                <td ><%= task.duedate %></td>
                <td><%= task.priority %></td>
                <td>
                <div class="col-offset-4">
                    <%= link_to "",  complete_task_path(task), :class => 'fa fa-check fa-2x', :title => 'Complete task' %>
                    
                    <%= link_to "", task_path(task), :class => 'fa fa-eye fa-2x', :title => 'Show task' %>
                    <%= link_to "", edit_task_path(task), :class => 'fa fa-pencil-square-o fa-2x', :title => 'Edit task' %>
                    <%= link_to "", task_path(task),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'fa fa-trash fa-2x', :title => 'Delete task' %>
                      </div>
                </td>
      </tr>


<% end %>
           
    </table>
    </div>
</div>
    <%= render 'buttons' %> 
<% end %>