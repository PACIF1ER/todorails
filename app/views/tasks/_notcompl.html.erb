<%- model_class = Task -%>

<div class="page-header">
  <h1>Not Completed tasks</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Check</th>  
      <th>Name</th>
      <th>Duedate</th>
      <th>Description</th>
      <th>Created at</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
<tbody>
    <%  @tasks.each do |task| %>
      <tr>
        <td><%= check_box_tag "tasks_id[]", task.id %></td>
        <td><%= task.name %></td>
        <td ><%= task.duedate %></td>
        <td><%= task.description %></td>
        <td><%=l task.created_at %></td>
        <td>
          <%= link_to 'Complete' , complete_task_path(task), :class => 'btn btn-success btn-xs' %>

          <%= link_to t('.show', :default => t("helpers.links.show")),
                      task_path(task), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_task_path(task), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      task_path(task),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>

        </td>
      </tr>
    <% end %>

  </tbody>
  </table>